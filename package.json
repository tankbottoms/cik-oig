{
	"name": "cik-oig-app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && node scripts/copy-csv-to-functions.js",
		"build:full": "bun run data:all && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"data:ciks": "bun run scripts/filter-healthcare-ciks.ts",
		"data:oig": "bun run scripts/download-oig-csv.ts",
		"data:all": "bun run data:ciks && bun run data:oig",
		"test": "npx playwright test --config tests/playwright.config.ts",
		"test:dev": "npx playwright test --config tests/playwright.config.ts --project=dev-desktop",
		"test:prod": "npx playwright test --config tests/playwright.config.ts --project=prod-desktop",
		"test:tags": "npx playwright test --config tests/playwright.config.ts --project=dev-desktop tag-group-workflow",
		"test:ui": "npx playwright test --config tests/playwright.config.ts --ui",
		"test:all": "npx playwright test --config tests/playwright.config.ts --project=dev-desktop && npx playwright test --config tests/playwright.config.ts --project=dev-tablet && npx playwright test --config tests/playwright.config.ts --project=dev-phone && npx playwright test --config tests/playwright.config.ts --project=prod-desktop && npx playwright test --config tests/playwright.config.ts --project=prod-tablet && npx playwright test --config tests/playwright.config.ts --project=prod-phone"
	},
	"devDependencies": {
		"@playwright/test": "^1.58.2",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-vercel": "^6.3.2",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"svelte": "^5.51.0",
		"svelte-check": "^4.3.6",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	}
}
